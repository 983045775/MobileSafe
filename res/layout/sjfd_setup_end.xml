<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/titleTheme"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/setupEndText"
            android:text="安全号码" />

        <TextView
            android:id="@+id/sjfd_end_number"
            style="@style/setupEndText"
            android:layout_alignParentRight="true"
            android:text="安全号码" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#88000000" />

    <RelativeLayout
        android:background="@drawable/sjfd_item_background"
        android:id="@+id/rl_proPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/setupEndText"
            android:text="防盗保护是否开启" />

        <ImageView
            android:id="@+id/setup_end_ivlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/unlock" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#88000000" />

    <RelativeLayout
        android:background="@drawable/sjfd_item_background"
        android:id="@+id/rl_openSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/setupEndText"
            android:text="重新进入设置向导" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:padding="13dp"
        android:text="功能简介"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        style="@style/sjfdSetupItemStyle"
        android:text="GPS追踪:#*location*#" />

    <TextView
        style="@style/sjfdSetupItemStyle"
        android:text="播放报警音乐:#*alarm*#" />

    <TextView
        style="@style/sjfdSetupItemStyle"
        android:text="远程数据删除:#*wipedata*#" />

    <TextView
        style="@style/sjfdSetupItemStyle"
        android:text="远程锁屏:#*lockscreen*#:" />

</LinearLayout>